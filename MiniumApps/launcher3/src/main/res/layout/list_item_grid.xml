<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/relMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="Grid">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:tag="0"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:id="@+id/linearList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_8"
        android:tag="1"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <ImageView
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minHeight="44dp"
            >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:contentDescription="@null"
                />

            <ImageView
                android:id="@+id/imgAppIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|bottom"
                android:contentDescription="@null"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tools_txtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="InefficientWeight">

            <io.focuslauncher.phone.customviews.RobotoCondensedTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center|bottom"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:textColor="?attr/icon_color"
                android:textSize="13sp"
                tools:text="Send as a message"/>

            <io.focuslauncher.phone.customviews.RobotoCondensedTextView
                android:id="@+id/textDefaultApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Default App"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
