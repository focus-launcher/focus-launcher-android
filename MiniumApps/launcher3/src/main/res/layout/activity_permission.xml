                    android:layout_height="wrap_content"
                    android:text="@string/call_permission"
                    android:textSize="@dimen/text.size.large" />

                <Switch
                    android:id="@+id/switchCallPermission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:id="@+id/tblSMS"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <co.siempo.phone.customviews.RobotoCondensedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sms_permission"
                    android:textSize="@dimen/text.size.large" />

                <Switch
