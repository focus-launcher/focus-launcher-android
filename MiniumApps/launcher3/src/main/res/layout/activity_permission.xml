            <TableRow
                android:id="@+id/tblStorage"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <io.focuslauncher.phone.customviews.RobotoCondensedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/storage_permission"
                    android:textSize="@dimen/text.size.large" />

                <Switch
                    android:id="@+id/switchFilePermission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:id="@+id/tblLocation"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <io.focuslauncher.phone.customviews.RobotoCondensedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location_permission"
                    android:textSize="@dimen/text.size.large" />


            </TableRow>


            <TableRow
                android:id="@+id/tblNotification"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <io.focuslauncher.phone.customviews.RobotoCondensedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notificationAccess"
                    android:textSize="@dimen/text.size.large" />

                <Switch
                    android:id="@+id/switchNotificationAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>


            <TableRow
                android:id="@+id/tblDrawOverlay"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <io.focuslauncher.phone.customviews.RobotoCondensedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/draw_overlay"
                    android:textSize="@dimen/text.size.large" />

                <Switch
                    android:id="@+id/switchOverlayAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>
            <TableRow
                android:id="@+id/tblControlAccessUsage"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <io.focuslauncher.phone.customviews.RobotoCondensedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/control_access_usage"
                    android:textSize="@dimen/text.size.large" />

                <Switch
                    android:id="@+id/switchControlAccessUsage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:text="@string/btn_continue" />


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
